<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".welcomeActivity"
    android:layout_height="match_parent"
    android:layout_width="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lhandw"
        android:gravity="center"
        android:text="GestPro"
        android:textColor="@color/color_back_login"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/nav"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_nav"
        app:itemTextColor="@drawable/color_change"
        app:itemIconTint="@drawable/color_change"
        android:background="@drawable/shape"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="677dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/welcome_fond"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"/>

    <RelativeLayout
        tools:context=".welcomeActivity"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/lhandw"
            android:text="Mes projets"
            android:textColor="@color/color_back_login"
            android:textSize="25sp"
            android:textStyle="bold"/>







    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="300dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="135dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Photo"
                    android:backgroundTint="@color/color_back_login"
                    android:id="@+id/photo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="300dp">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_viewprojet"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_marginTop="15dp" />


            </LinearLayout>


        </RelativeLayout>
</RelativeLayout>