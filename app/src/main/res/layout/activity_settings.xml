<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/nav"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_nav"
        app:itemTextColor="@drawable/color_change"
        app:itemIconTint="@drawable/color_change"
        android:background="@drawable/shape"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="677dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/newMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/custome_edittext"
        android:drawablePadding="8dp"
        android:hint="new mail"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/color_back_login" />

    <Button
        android:id="@+id/ChangeButtonMDP"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newMDP"
        android:layout_alignStart="@+id/newMail"
        android:layout_alignEnd="@+id/newMail"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/color_back_login"
        android:text="Change"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/newMDP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChangeButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/custome_edittext"
        android:drawablePadding="8dp"
        android:hint="new mdp"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/color_back_login" />

    <Button
        android:id="@+id/ChangeButton"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newMail"
        android:layout_alignStart="@+id/newMail"
        android:layout_alignEnd="@+id/newMail"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/color_back_login"
        android:text="Change"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/newUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChangeButtonMDP"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/custome_edittext"
        android:drawablePadding="8dp"
        android:hint="new username"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/color_back_login" />

    <Button
        android:id="@+id/ChangeButtonUsername"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newUsername"
        android:layout_alignStart="@+id/newMail"
        android:layout_alignEnd="@+id/newMail"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/color_back_login"
        android:text="Change"
        android:textSize="18sp" />

    <Button
        android:id="@+id/deconnexionButton"
        android:layout_width="280dp"
        android:layout_height="58dp"
        android:layout_above="@+id/nav"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/color_back_login"
        android:text="DÃ©connexion"
        android:textSize="18sp" />
</RelativeLayout>